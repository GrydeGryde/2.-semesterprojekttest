@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<style>
    body {
        /* Margin bottom by footer height */
        margin-bottom: 0;
    }
</style>

<div class="text-center" id="headerimageindex">
    <div id="imageoverlayindexheader">
    <h1>Welcome to Cruize!</h1>
        <h4>Cruizing to school!</h4>
    </div>
</div>

@if(Model.validUser == 0) {
    <div class="row" id="cardcontainer">
        <div class="card bg-dark text-white">
            <a asp-page="LoginLogoutUser">
                <img class="card-img" src="~/Images/rideshare1.jpg" alt="Card image">
                <div class="card-img-overlay">
                    <h3 class="card-title">Login</h3>
                </div>
            </a>
        </div>

        <div class="card bg-dark text-white">
            <a asp-page="CreateUser">
                <img class="card-img" src="~/Images/rideshare2.jpg" alt="Card image">
                <div class="card-img-overlay">
                    <h3 class="card-title">Create User</h3>
                </div>
            </a>
        </div>
    
    </div>
}
else
{
    <div class="row" id="cardcontainer">
        <div class="card bg-dark text-white">
            <a asp-page="AvailableRoutes">
                <img class="card-img" src="~/Images/rideshare3.jpg" alt="Card image">
                <div class="card-img-overlay">
                    <h3 class="card-title">Available Routes</h3>
                </div>
            </a>
        </div>

        <div class="card bg-dark text-white">
            <a asp-page="MyRoutes">
                <img class="card-img" src="~/Images/rideshare4.jpg" alt="Card image">
                <div class="card-img-overlay">
                    <h3 class="card-title">My Routes</h3>
                </div>
            </a>
        </div>
    </div>
}