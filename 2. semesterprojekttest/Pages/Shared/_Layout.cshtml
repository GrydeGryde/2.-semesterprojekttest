<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - _2._semesterprojekttest</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body style="min-width: 414px">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            
            

            <div class="container" id="navbarcontainer">

                @if (Model.validUser == 1)
                {
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                }

                <a class="navbar-brand" asp-area="" asp-page="/Index"><img src="/Images/cruizelogo.png" id="logo"></a>

                @if (Model.validUser == 1)
                {
                    if (Model.ProfilePicture == null)
                    {
                        <a class="rounded-circle" id="profileimage" asp-area="" asp-page="/ProfilePage"><img src="/Images/emptyprofile.png" id="profilepic" class="rounded-circle"></a>
                    }
                    else
                    {
                        String file = "data:image/jpeg;base64," + Convert.ToBase64String(Model.ProfilePicture.Picture1);
                        <a class="rounded-circle" id="profileimage" asp-area="" asp-page="/ProfilePage"><img src="@file" id="profilepic" class="rounded-circle"></a>

                    }

                

                    <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                        <ul class="navbar-nav flex-grow-1">
                            @if (Model.validUser == 1)
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-page="/AvailableRoutes">Available routes</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-page="/DummyReportPage">Report User</a>
                                </li>
                            }

                            @if (Model.validDriver == 1)
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-page="/CreateRoute">Create Route</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-page="/DriverRequests">Driver Requests</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-page="/Coupons">Coupons</a>
                                </li>
                            }

                            @if (Model.adminLogin == 1)
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-page="/Statistics">Statistics</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-page="/AdminReportedUsers">Reported Users</a>
                                </li>
                            }

                            @if (Model.validUser == 1)
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-page="/LoginLogoutUser">Log out</a>
                                </li>
                            }
                        </ul>
                    </div>
                }
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - _2._semesterprojekttest - <a asp-area="" asp-page="/ContactUs">Contact us</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
