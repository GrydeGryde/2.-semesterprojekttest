@page
@using _2._semesterprojekttest.Models
@model _2._semesterprojekttest.Pages.AvailableRoutesModel
@{
}

<table class="table table-bordered table-striped">
    <thead class="table-primary">
    <th>Start point</th>
    <th>End point</th>
    <th>Day</th>
    <th>Arrival time</th>
    <th>Seats left</th>
    <th></th>
    </thead>

    <tbody>
        @foreach (Route routes in Model.liste)
        {
            if (routes.Space > 0 && routes.UserId != Model.userID)
            {
        <tr>
            <td>@routes.Start</td>
            <td>@routes.Goal</td>
            <td>@Model.GetDay(routes.Day)</td>
            <td>@routes.Arrival.ToString("t")</td>
            <td>@(routes.Space-Model.OccupiedSpace(routes.RouteId))</td>
            <td><a asp-page="Route" asp-route-id="@routes.RouteId">Apply</a></td>
        </tr>
            }
        }
    </tbody>
</table>