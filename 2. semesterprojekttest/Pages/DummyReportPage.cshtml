@page
@using _2._semesterprojekttest.Models
@model _2._semesterprojekttest.Pages.DummyReportPageModel
@{

    <div class="text-center">
        <h1 class="display-4">Users</h1>
        <table class="table table-bordered table-striped">
            <thead class="table-primary">
            <th></th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Report User</th>
            </thead>
            <tbody>
                @foreach (CruizeUser user in Model._listeUsers)
                {
                    if (user.UserId != Model.userID)
                    {
                        <tr>
                            <td>@if (Model.GetPicture(user.UserId) == null)
                                {
                                    <img src="/Images/emptyprofile.png" alt="profilepic" height="80" width="80" class="rounded-circle">
                                }
                                else
                                {
                                    String file = "data:image/jpeg;base64," + Convert.ToBase64String(Model.GetPicture(user.UserId).Picture1);
                                    <img src="@file" alt="profilepic" height="80" width="80" class="rounded-circle">
                                }</td>
                            <td>@user.FirstName</td>
                            <td>@user.LastName</td>

                            <td>
                                <a asp-page="ReportUser" asp-route-id="@user.UserId">Report</a>
                            </td>
                        </tr>

                    }
                }
            </tbody>
        </table>
    </div>
}
